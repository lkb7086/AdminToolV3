    if (newUserList == null)
    {
        NLogManager.Instance.Log("Home.cshtml / ViewBag.NewUserList is null");
        return;
    }

    if (dauList == null)
    {
        NLogManager.Instance.Log("Home.cshtml / ViewBag.DAUList is null");
